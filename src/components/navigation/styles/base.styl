.component-navigation
  background-color #fff
  flex-wrap nowrap
  height navigation-height
  position relative
  //z-index 11

  .navigation-brand
    background-color #fff
    display flex
    flex-direction column
    height 100%
    justify-content center
    z-index 11

    .navigation-logo
      display flex
      flex 1
      flex-direction column
      justify-content center

  .navigation-toggle
    cursor pointer
    height 100%
    padding 0 (grid-gutter-width / 2) // flush against right gutter
    position absolute
    right 0
    top 0
    z-index 12

    &:hover
      background-color darken(@background-color, 5%)

    .icon-menu
      line-height 44px

  .navigation-menu
    display block
    left 0
    padding 0
    position absolute
    top navigation-height
    width 100%
    z-index 10

    .navigation-links
      background-color #fff
      list-style none
      margin 0
      padding 0
      position relative
      transform translate3d(0, -100%, 0)
      transition transform 0.25s linear

      > li
        box-sizing border-box
        display block
        position relative

        a
          box-sizing border-box
          display block
          padding 10px (grid-gutter-width / 2)

          &:hover
            background-color darken(#fff, 5%)

.component-navigation.navigation-open

  .navigation-links
    transform translate3d(0, 0, 0)
